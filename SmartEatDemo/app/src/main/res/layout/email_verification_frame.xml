<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/email_verification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_verification_title"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Поле для ввода кода подтверждения -->
    <EditText
        android:id="@+id/email_code_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/email_code_hint"
        android:inputType="number"
        android:maxLength="6"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/email_verification_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для подтверждения кода -->
    <Button
        android:id="@+id/verify_email_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_email_button_text"
        app:layout_constraintTop_toBottomOf="@id/email_code_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для повторной отправки кода -->
    <Button
        android:id="@+id/resend_code_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/resend_code_button_text"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/verify_email_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
