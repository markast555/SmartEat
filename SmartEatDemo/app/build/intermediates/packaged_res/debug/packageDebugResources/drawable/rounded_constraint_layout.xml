<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Слой тени -->
    <!-- Право -->
    <item>
        <shape android:shape="rectangle" >
            <gradient android:angle="0" android:centerColor="#00000000"
                android:centerX="0.95" android:endColor="#55000000"
                android:startColor="#00000000" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Низ -->
    <item>
        <shape android:shape="rectangle" >
            <gradient android:angle="10" android:centerColor="#00000000"
                android:centerX="0.95" android:endColor="#55000000"
                android:startColor="#00000000" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Верх -->
    <item>
        <shape android:shape="rectangle" >
            <gradient android:angle="90" android:centerColor="#00000000"
                android:centerX="0.95" android:endColor="#55000000"
                android:startColor="#00000000" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <!-- Лево -->
    <item>
        <shape android:shape="rectangle" >
            <gradient android:angle="180" android:centerColor="#00000000"
                android:centerX="0.95" android:endColor="#55000000"
                android:startColor="#00000000" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Основной фон -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#9C76A640"/> <!-- Цвет фона -->
        </shape>
    </item>
</layer-list>
